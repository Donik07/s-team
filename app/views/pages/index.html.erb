<% provide :page_name, "Все заявки" %>

<div class="mt-3 mb-5">
  <h1>Все заявки</h1>
  <%= link_to image_tag("plus.svg"), new_question_path, id: 'plus' %>
</div>


<% @questions.each do |question| %>
  <article class="card mb-3" id="question-<%= question.id %>">
    <div class="card-body">
      <div class="responsible">
        <%= image_tag("Novikov.png") %>
        <%= image_tag("Nikiforova.png") %>
        <%= image_tag("Sasha.png") %>
      </div>

      <div class="card-info">
        <h3 class="mb-4 mt-0">
          <%= truncate question.title, length: 50 %>
          <%= question.user.name %>
          <% question.users.each do |f| %>
            <%= f.name %>
          <% end %>
        </h3>
        <p>
          <%= truncate question.body, length: 80 %>
        </p>
      </div>
      <time>
        <% time = question.created_at.strftime('%d/%m %H:%M') %>
        <%= get_days time %>
      </time>
      <br>

      <div class="buttons">
        <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
        <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
        <%= button_to 'Отменить', question_path(question), :method => :delete, class: 'btn btn-danger' %>
      </div>

    </div>

    <a href="#" class="arrow-down">
      <i></i>
    </a>
  </article>
<%end%>
<%= paginate @questions if @questions.page(1).last_page? %>
