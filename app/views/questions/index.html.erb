<% provide :page_name, "Мои заявки" %>

<div class="mt-3 mb-5">
  <h1>Мои заявки</h1>
  <%= link_to image_tag("plus.svg"), new_question_path, id: 'plus' %>
</div>


<% @questions.each do |question| %>
  <% if question.statuses_id == 2 %>
    <article class="card mb-3" id="question-<%= question.id %>">
      <div class="card-body">

        <div class="responsible">
          <% creator_avatar = set_avatar question.user.id %>
          <% responsible_avatar = set_avatar question.users_id %>
          <div class="worked rotating" title="Заявка в работе"></div>
          <div>
            <%= image_tag("#{creator_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.user.id %></p>
          </div>

          <div>
            <%= image_tag("#{responsible_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.users_id %></p>
          </div>
        </div>

        <div class="card-info">
          <h3 class="mb-4 mt-0">
            <%= link_to "#{truncate question.title}", question_path(question), length: 50, class: 'link_title' %>
          </h3>
          <p>
            <%= truncate question.body, length: 80 %>
          </p>
        </div>
        <time>
          <% time = question.created_at.strftime('%d/%m %H:%M') %>
          <%= get_days time %>
        </time>
        <br>

        <div class="buttons">
          <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
          <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
          <%= button_to 'Отменить', send_to_archive_question_path(question), class: 'btn btn-danger' %>
        </div>

      </div>

      <a href="#" class="arrow-down" id="get_all" value='0' onclick="get_all.value='1'">
        <i></i>
      </a>
    </article>
  <% elsif question.statuses_id == 3 %>
    <article class="card card-success card mb-3" id="question-<%= question.id %>">
      <div class="card-body">

        <div class="responsible">
          <% creator_avatar = set_avatar question.user.id %>
          <% responsible_avatar = set_avatar question.users_id %>
          <div>
            <%= image_tag("#{creator_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.user.id %></p>
          </div>

          <div>
            <%= image_tag("#{responsible_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.users_id %></p>
          </div>
        </div>

        <div class="card-info">
          <h3 class="mb-4 mt-0">
            <%= link_to "#{truncate question.title}", question_path(question), length: 50, class: 'link_title' %>
          </h3>
          <p>
            <%= truncate question.body, length: 80 %>
          </p>
        </div>
        <time>
          <% time = question.created_at.strftime('%d/%m %H:%M') %>
          <%= get_days time %>
        </time>
        <br>

        <div class="buttons">
          <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
          <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
          <%= button_to 'Отменить', question_path(question), :method => :delete, class: 'btn btn-danger' %>
        </div>

      </div>

      <a href="#" class="arrow-down" id="get_all" value='0' onclick="get_all.value='1'">
        <i></i>
      </a>
    </article>
  <% else %>
    <article class="card mb-3" id="question-<%= question.id %>">
      <div class="card-body">

        <div class="responsible">
          <% creator_avatar = set_avatar question.user.id %>
          <% responsible_avatar = set_avatar question.users_id %>
          <div>
            <%= image_tag("#{creator_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.user.id %></p>
          </div>

          <div>
            <%= image_tag("#{responsible_avatar}") %>
            <p class="responsible_fio"><%= set_responsible_fio question.users_id %></p>
          </div>
        </div>

        <div class="card-info">
          <h3 class="mb-4 mt-0">
            <%= link_to "#{truncate question.title}", question_path(question), length: 50, class: 'link_title' %>
          </h3>
          <p>
            <%= truncate question.body, length: 80 %>
          </p>
        </div>
        <time>
          <% time = question.created_at.strftime('%d/%m %H:%M') %>
          <%= get_days time %>
        </time>
        <br>

        <div class="buttons">
          <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
          <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
          <%= button_to 'Отменить', send_to_archive_question_url(question), class: 'btn btn-danger' %>
        </div>

      </div>

      <a href="#" class="arrow-down" id="get_all" value='0' onclick="get_all.value='1'">
        <i></i>
      </a>
    </article>
  <% end %>
<%end%>
<%= paginate @questions %> <!--if @questions.page(1).last_page?-->

