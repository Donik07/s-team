<% provide :page_name, "Мои заявки" %>

<div class="mt-3 mb-5">
  <h1>Мои заявки</h1>
  <%= link_to image_tag("plus.svg"), new_question_path, id: 'plus' %>
</div>


<% @questions.each do |question| %>
  <article class="card mb-3" id="question-<%= question.id %>">
    <div class="card-body">

      <div class="responsible">
        <% creator_avatar = set_avatar question.user.id %>
        <% responsible_avatar = set_avatar question.users_id %>
        <div>
        <%= image_tag("#{creator_avatar}") %>
        <p class="responsible_fio"><%= set_responsible_fio question.user.id %></p>
        </div>

        <div>
        <%= image_tag("#{responsible_avatar}") %>
        <p class="responsible_fio"><%= set_responsible_fio question.users_id %></p>
        </div>
      </div>

      <div class="card-info">
        <h3 class="mb-4 mt-0">
          <%= truncate question.title, length: 50 %>
          <%#= question.user.name %>
          <%# name = User.find_by id: question.users_id %>
          <%#= name.name %>
        </h3>
        <p>
          <%= truncate question.body, length: 80 %>
        </p>
      </div>
      <time>
        <% time = question.created_at.strftime('%d/%m %H:%M') %>
        <%= get_days time %>
      </time>
      <br>

      <div class="buttons">
        <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
        <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
        <%= button_to 'Отменить', question_path(question), :method => :delete, class: 'btn btn-danger' %>
      </div>

    </div>

    <a href="#" class="arrow-down" id="get_all" value='0' onclick="get_all.value='1'">
      <i></i>
    </a>
  </article>
<%end%>
<%= paginate @questions if @questions.page(1).last_page? %>

<script type="text/javascript" charset="utf-8">
    var obj = document.getElementById("nav-2")
    obj.classList.toggle("nav_border")
</script>
