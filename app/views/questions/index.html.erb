<div class="mt-3 mb-5">
  <h1>Мои заявки</h1>
  <%= link_to image_tag("plus.svg"), new_question_url %>
</div>

<% @questions.each do |question| %>
  <article class="card mb-3">
    <div class="card-body">
      <div class="card-info">
        <h2 class="mb-4 mt-0"><%= question.title %></h2>
        <p><%= question.body %></p>
      </div>
      <time>
        <% time = question.created_at.strftime('%d/%m %H:%M') %>
        <%= get_days time %>
      </time>
      <br>

      <div class="buttons">
        <%= link_to 'Открыть', question_path(question), class: 'btn btn-primary' %>
        <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-secondary text-white' %>
        <%= button_to 'Удалить', question_path(question), :method => :delete, class: 'btn btn-danger' %>
      </div>

    </div>
  </article>
<%end%>