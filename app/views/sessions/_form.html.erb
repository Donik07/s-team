<%= form_with url: session_path, local: true do |f| %>

  <div class="mt-5 mb-2">
    <%= f.label "E-mail:" %>
  </div>
  <div>
    <%= f.email_field :email, required: true, value: params[:email], placeholder: 'example@mail.ru',
                      class: "form-control", autocomplete: "off", autofocus: true %>
  </div>

  <div class="mt-4 mb-2">
    <%= f.label "Пароль:" %>
  </div>
  <div>
    <%= f.password_field :password, required: true, minlength: 8, placeholder: 'Да-да, придётся его вспомнить...',
                         class: "form-control", autocomplete: "off"%>
  </div>

  <div class="row mb-3 mt-5">
    <div class="col-sm-10">
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input", value: 1 %>
        <%= f.label "Запомнить меня", class: "form-check-label" %>
      </div>
    </div>
  </div>

  <%= f.submit "Войти", class: "w-100 btn btn-lg btn-primary", id: 'submit' %>
<% end %>